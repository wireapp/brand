{
  "name": "brand",
  "license": "LicenseRef-LICENSE",
  "repository": {
    "type": "git",
    "url": "https://github.com/wireapp/brand.git"
  },
  "devDependencies": {
    "husky": "4.2.5",
    "lint-staged": "10.2.8",
    "prettier": "2.0.5"
  },
  "lint-staged": {
    "*.{json,md,scss,yaml,yml}": [
      "prettier --write",
      "git add"
    ]
  },
  "scripts": {
    "fix": "prettier --write \"**/*.{json,md,scss,yaml,yml}\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
