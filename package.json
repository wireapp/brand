{
  "name": "brand",
  "license": "LicenseRef-LICENSE",
  "repository": {
    "type": "git",
    "url": "https://github.com/wireapp/brand.git"
  },
  "devDependencies": {
    "husky": "2.2.0",
    "lint-staged": "8.1.6",
    "prettier": "1.18.0"
  },
  "lint-staged": {
    "*.{json,md,scss,yaml,yml}": [
      "prettier --write",
      "git add"
    ]
  },
  "scripts": {
    "fix": "prettier --write \"**/*.{json,md,scss,yaml,yml}\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
